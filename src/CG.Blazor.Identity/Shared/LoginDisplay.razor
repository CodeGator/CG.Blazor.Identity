@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Extensions.Options;
@inject IOptions<IdentityOptions> IdentityOptions

@if (!IdentityOptions.Value.DeveloperBypass)
{
    <AuthorizeView>
        <Authorized>
            <form method="post" action="Identity/Account/Logout">
                <MudButton Color="Color.Inherit" ButtonType="ButtonType.Submit" Class="nav-link btn btn-link" >Log out</MudButton>
                @*<button type="submit" class="nav-link btn btn-link">Log out</button>*@
            </form>
        </Authorized>
        <NotAuthorized>
            <MudLink Color="Color.Inherit" Href="Identity/Account/Login">Log in</MudLink>
            @*<a href="Identity/Account/Login">Log in</a>*@
        </NotAuthorized>
    </AuthorizeView>
}
